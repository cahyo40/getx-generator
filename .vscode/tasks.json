{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GetX: Initialize Project",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "init"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Page",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "page:${input:pageName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Page (Presentation Only)",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "page:${input:pageName}",
                "--presentation-only"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Screen on Page",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "screen",
                "${input:screenName}",
                "on",
                "${input:targetPageName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Repository on Page",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "repository:${input:repoName}",
                "on",
                "${input:targetPageName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Usecase on Page",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "usecase:${input:usecaseName}",
                "on",
                "${input:targetPageName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Entity on Page",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "entity:${input:entityName}",
                "on",
                "${input:targetPageName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Controller",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "controller:${input:controllerName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Model",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "model:${input:modelName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Freezed Model",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "model:${input:modelName}",
                "--freezed"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Widget",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "widget:${input:widgetName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Generate Service",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "service:${input:serviceName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Delete Page",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "delete:page:${input:pageName}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: List Pages",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "list"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "GetX: Show Help",
            "type": "shell",
            "command": "dart",
            "args": [
                "generate.dart",
                "--help"
            ],
            "problemMatcher": [],
            "group": "build"
        }
    ],
    "inputs": [
        {
            "id": "pageName",
            "type": "promptString",
            "description": "Enter page name (e.g., home, auth.login, settings.profile):"
        },
        {
            "id": "targetPageName",
            "type": "promptString",
            "description": "Enter target page name where this will be created:"
        },
        {
            "id": "screenName",
            "type": "promptString",
            "description": "Enter screen name (e.g., login, profile, dashboard):"
        },
        {
            "id": "repoName",
            "type": "promptString",
            "description": "Enter repository name (e.g., user, auth, product):"
        },
        {
            "id": "usecaseName",
            "type": "promptString",
            "description": "Enter usecase name (e.g., getuser, login, fetchproducts):"
        },
        {
            "id": "entityName",
            "type": "promptString",
            "description": "Enter entity name (e.g., user, product, order):"
        },
        {
            "id": "controllerName",
            "type": "promptString",
            "description": "Enter controller name:"
        },
        {
            "id": "modelName",
            "type": "promptString",
            "description": "Enter model name:"
        },
        {
            "id": "widgetName",
            "type": "promptString",
            "description": "Enter widget name:"
        },
        {
            "id": "serviceName",
            "type": "promptString",
            "description": "Enter service name (e.g., storage, auth, notification):"
        }
    ]
}